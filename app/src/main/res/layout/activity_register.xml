<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.auth.register.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="50dp">

        <TextView
            android:id="@+id/activity_register_info_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_register_info_textview" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_contact_information_entry"
            android:name="net.samuelcmace.restaurantbuddyandroid.gui.auth.register.ContactInformationEntryFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_address_entry"
            android:name="net.samuelcmace.restaurantbuddyandroid.gui.auth.register.AddressEntryFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_username_password"
            android:name="net.samuelcmace.restaurantbuddyandroid.gui.auth.register.UsernamePasswordFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/activity_register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_register_button" />

        <TextView
            android:id="@+id/activity_register_switch_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_register_switch_to_login">

        </TextView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>